{
  "compilerOptions": {
    /* === Dateistruktur === */
    "rootDir": "./src",
    "outDir": "./dist",

    /* === Umgebung & Ziel === */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "types": ["node", "jest"],

    /* === Komfortfunktionen === */
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    /* === Typpr√ºfung & Sicherheit === */
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src", "src/types"],
  "exclude": ["node_modules", "dist"]
}
